@model IEnumerable<BeverageSandbox.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BrandID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BrandID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BrandID })
        </td>
    </tr>
}
</table>

<br />
<br />

<ul>
@foreach (var brand in Model)
{
    <li>
        @Html.Hidden("BrandID", brand.BrandID)
        @brand.Name
    <br />
    <div class="beercontainer" />
    </li>
}
</ul>

@section scripts{
<script type="text/javascript">
    $('ul li').live('click', function () {
        //console.log('/Beer/PartialBeerList/' + $(this).find('#BrandID').val());
        $(this).find('.beercontainer').after().load('/Beer/PartialBeerList/' + $(this).find('#BrandID').val());
    });
</script>
}
